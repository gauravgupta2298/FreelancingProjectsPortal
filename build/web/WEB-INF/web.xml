<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>EmployerSignupChecker</servlet-name>
        <servlet-class>controller.EmployerSignupChecker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployerLoginChecker</servlet-name>
        <servlet-class>controller.EmployerLoginChecker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FreelancerSignupChecker</servlet-name>
        <servlet-class>controller.FreelancerSignupChecker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FreelancerLoginChecker</servlet-name>
        <servlet-class>controller.FreelancerLoginChecker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostNewAdd</servlet-name>
        <servlet-class>controller.PostNewAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployerSignupChecker</servlet-name>
        <url-pattern>/EmployerSignupChecker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployerLoginChecker</servlet-name>
        <url-pattern>/EmployerLoginChecker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FreelancerSignupChecker</servlet-name>
        <url-pattern>/FreelancerSignupChecker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FreelancerLoginChecker</servlet-name>
        <url-pattern>/FreelancerLoginChecker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostNewAdd</servlet-name>
        <url-pattern>/PostNewAdd</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
